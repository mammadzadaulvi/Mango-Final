@using Mango.Areas.Admin.ViewModels.HomeIntro
@model HomeIntroIndexVM


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Home Intro</h4>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Url</th>
                                        <th>Photo</th>
                                        <th>Actions</th>

                                    </tr>
                                </thead>
                                <tbody>

                                    @{
                                        @if (Model.HomeIntro == null)
                                        {

                                            <a class="btn btn-primary" asp-action="create" asp-controller="homeintro" asp-area="admin">CREATE Home Intro</a>

                                        }
                                        else
                                        {
                                            <tr>
                                                <td>@Model.HomeIntro.Id</td>
                                                <td>@Model.HomeIntro.Title</td>
                                                <td>@Model.HomeIntro.Description</td>
                                                <td>@Model.HomeIntro.Url</td>
                                                <td>
                                                    <div style="width: 300px;">
                                                        <img style="max-width:100%" src="~/assets/img/@Model.HomeIntro.PhotoPath" />
                                                    </div>
                                                </td>
                                                <td>
                                                    <a class="btn btn-primary" asp-action="update" asp-controller="homeintro" asp-area="admin" asp-route-id="@Model.HomeIntro.Id">Update</a>
                                                    <a class="btn btn-danger" onclick="confirm('Eminsinizmi?')" asp-action="delete" asp-controller="homeintro" asp-area="admin" asp-route-id="@Model.HomeIntro.Id">Delete</a>
                                                    <a class="btn btn-info" asp-action="details" asp-controller="homeintro" asp-area="admin" asp-route-id="@Model.HomeIntro.Id">Details</a>
                                                </td>
                                            </tr>
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

