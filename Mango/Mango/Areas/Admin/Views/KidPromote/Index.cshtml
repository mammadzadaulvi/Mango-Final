@using Mango.Areas.Admin.ViewModels.KidPromote
@model KidPromoteIndexVM


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Kid Promote</h4>
                        <a class="btn btn-primary" asp-action="create" asp-controller="kidpromote" asp-area="admin">CREATE Kid Promote</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Title</th>
                                        <th>Url</th>
                                        <th>Photo</th>
                                        <th>Actions</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var otherLine in Model.KidPromotes)
                                    {
                                        <tr>
                                            <td>@otherLine.Id</td>
                                            <td>@otherLine.Title</td>
                                            <td>@otherLine.Url</td>
                                            <td><img src="~/assets/img/@otherLine.PhotoPath" /></td>
                                            <td>
                                                <a class="btn btn-primary" asp-action="update" asp-controller="kidpromote" asp-area="admin" asp-route-id="@otherLine.Id">Update</a>
                                                <a class="btn btn-danger" onclick="confirm('Eminsinizmi?')" asp-action="delete" asp-controller="kidpromote" asp-area="admin" asp-route-id="@otherLine.Id">Delete</a>
                                                <a class="btn btn-info" asp-action="details" asp-controller="kidpromote" asp-area="admin" asp-route-id="@otherLine.Id">Details</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>