@model List<FavouriteItemDetailVM>

@{
    ViewData["Title"] = "Favorites";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<div style="text-align:center;padding:50px">
    <h1>Wishlist</h1>
</div>

<div class="container">
    <div class="row">
    @foreach (var item in Model)
    {
        <div class="card col-md-4 mx-4" style="width: 18rem;">
            <img class="card-img-top" src="~/assets/img/@item.Product.ProductPhotos.FirstOrDefault()?.Name" alt="Card image cap">
            <div class="card-body">
                <h5 style="font-weight:bold" class="card-title">@item.Product.Title</h5>
                    <div style="display:flex; justify-content:space-between">
                        <p style="font-weight:bold" class="card-text">Price: @(item.Product.Price)$</p>
                        <div style="cursor:pointer" id="heartimg">
                            <a style="color:black" class="add-to-favourites-wishlist" asp-action="AddToFavourites" asp-controller="product" asp-route-productId="@item.Product.Id">
                                <i style="font-size:20px" class="heart-icon fa-solid fa-heart"></i>
                            </a>
                        </div>
                    </div>
                <a class="add-to-basket btn btn-dark" asp-action="addtobasket" asp-controller="product" asp-route-productId="@item.Product.Id">Add to Shopping Bag</a>
                
            </div>
        </div>
    }
    </div>
</div>
