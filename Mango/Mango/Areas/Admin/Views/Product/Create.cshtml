@using Mango.Areas.Admin.ViewModels.Product
@model ProductCreateVM

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">

                        <p class="card-description">
                            Create Product
                        </p>
                        <form enctype="multipart/form-data" method="post" asp-action="create" asp-controller="product" asp-area="admin" class="forms-sample">

                            <div class="form-group">
                                <label asp-for="Title">Title</label>
                                <input class="form-control" asp-for="Title">
                                <span asp-validation-for="Title"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price">Price</label>
                                <input class="form-control" asp-for="Price">
                                <span asp-validation-for="Price"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="RefCode">RefCode</label>
                                <input class="form-control" asp-for="RefCode">
                                <span asp-validation-for="RefCode"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Color">Color</label>
                                <input class="form-control" asp-for="Color">
                                <span asp-validation-for="Color"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Size">Size</label>
                                <input class="form-control" asp-for="Size">
                                <span asp-validation-for="Size"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description">Description</label>
                                <input class="form-control" asp-for="Description">
                                <span asp-validation-for="Description"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Material">Material</label>
                                <input class="form-control" asp-for="Material">
                                <span asp-validation-for="Material"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="MaterialIcon">MaterialIcon</label>
                                <input class="form-control" asp-for="MaterialIcon">
                                <span asp-validation-for="MaterialIcon"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ProductCategoryId">ProductCategoryId</label>
                                <select class="form-select" asp-for="ProductCategoryId" asp-items="Model.Categories"></select>
                                <span asp-validation-for="ProductCategoryId"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ProductSubCategoryId">ProductSubCategoryId</label>
                                <select class="form-select" asp-for="ProductSubCategoryId" asp-items="Model.SubCategories"></select>
                                <span asp-validation-for="ProductSubCategoryId"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Photos">Photos</label>
                                <input class="form-control" asp-for="Photos">
                                @{
                                    if (Html.ViewData.ModelState["Photos"] != null)
                                    {
                                        foreach (var error in Html.ViewData.ModelState["Photos"].Errors)
                                        {
                                            <li>@error.ErrorMessage</li>
                                        }
                                    }

                                }
                            </div>

                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <a class="btn btn-danger" asp-action="index" asp-controller="product" asp-area="admin"> Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>